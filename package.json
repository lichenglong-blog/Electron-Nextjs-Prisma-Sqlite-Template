{
    "name": "electron-nextjs-prisma-sqlite-template",
    "version": "1.1.1",
    "description": "桌面笔记应用",
    "main": "dist/main/main.js",
    "author": "18110647040163.com",
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev": "cross-env NEXT_PUBLIC_DEV=true concurrently --kill-others --success first \"pnpm run dev:next\" \"pnpm run dev:electron\"",
        "dev:next": "cross-env NEXT_PUBLIC_DEV=true next dev --turbo",
        "dev:electron": "pnpm run build:main && cross-env NEXT_PUBLIC_DEV=true electron .",
        "build": "pnpm run build:next && pnpm run build:main && electron-builder",
        "build:next": "rimraf .next && rimraf dist && prisma generate && next build && pnpm run copy:static && pnpm run copy:dist",
        "copy:dist": "cpy \".next/standalone/**/*\" \"dist/renderer\" --parents",
        "copy:static": "cpy \"public/**/*\" \".next/standalone\" && cpy \".next/static/**/*\" \".next/standalone/.next/static/\"",
        "build:main": "esbuild electron/main.js --bundle --platform=node --outfile=dist/main/main.js --external:electron",
        "start": "next start",
        "lint": "next lint",
        "postinstall": "prisma generate && prisma migrate dev --name init"
    },
    "dependencies": {
        "@prisma/client": "^5.10.2",
        "@react-spring/web": "^9.7.5",
        "antd": "^5.24.4",
        "browser-process-hrtime": "^1.0.0",
        "dotenv": "^16.4.7",
        "next": "^14.0.4",
        "process": "^0.11.10",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@next/swc-win32-x64-msvc": "14.2.24",
        "@types/node": "^20.10.6",
        "@types/react": "^18.2.46",
        "autoprefixer": "^10.4.16",
        "concurrently": "^9.1.2",
        "cpy-cli": "^5.0.0",
        "cross-env": "^7.0.3",
        "electron": "^28.1.1",
        "electron-builder": "^24.9.1",
        "esbuild": "^0.25.1",
        "postcss": "^8.4.32",
        "prisma": "^5.10.2",
        "rimraf": "^4.0.1",
        "tailwindcss": "^3.4.0",
        "typescript": "^5.3.3"
    },
    "build": {
        "appId": "com.example.ai-note",
        "productName": "AI笔记",
        "asar": true,
        "files": [
            "dist/main/main.js",
            "!node_modules"
        ],
        "extraResources": [
            {
                "from": "dist/renderer",
                "to": "renderer",
                "filter": [
                    "**/*"
                ]
            }
        ]
    }
}
